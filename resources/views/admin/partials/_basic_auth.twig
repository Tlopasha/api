<div class="form-block">
    <div class="col-24 mb2 nopadding">
        <label for="token" class="form-block__name"></label>    
    </div>
    <div class="col-24 nopadding">
        <div class="input-field ">
            <p>{{ description|raw }}</p>
        </div>
    </div>
    {% if documentation %}
        <div class="col-24 nopadding">
            <div class="input-field__desc">
                {{ documentation|raw }}
            </div>
        </div>
    {% endif %}
</div>